@model EditorTemplateDemo.Models.Home.CustomerAddModel

<div class="page-header">
    <h1>Add Customer</h1>
</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm" })
                <div>
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Initial, new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.Initial, new { @class = "form-control input-sm" })
                <div>
                    @Html.ValidationMessageFor(m => m.Initial, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm" })
                <div>
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CustomerTypeId, new { @class = "col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(x => x.CustomerTypeId, new SelectList(ViewBag.CustomerTypes, "Id", "Description"), new { @class = "form-control input-sm" })
                <div>
                    @Html.ValidationMessageFor(m => m.CustomerTypeId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9 col-md-offset-3">
                <label>@Html.CheckBoxFor(m => m.IsActive) Is Active</label>
            </div>
        </div>

        <button type="submit" class="btn btn-default">Save</button>
        @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-danger" })
    </div>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}